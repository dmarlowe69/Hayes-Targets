REM *************************************************************************
REM
REM     TARGET TRIM ANGLE
REM
REM *************************************************************************
        CLS
        XCP = 17.36 / 12
        XT = -3 / 12
        YT = 8.91 / 2
        CL = .2551
        CD = .34
        W = 64.7
REM *************************************************************************
REM
REM    
REM
REM *************************************************************************
        V = 300 * 1.689
        Q = .5 * .002378 * V ^ 2
        SR = (3.1417 * (8.91 / 2) ^ 2) / 144
REM *************************************************************************
REM
REM  
REM
REM *************************************************************************
        O = 0
        OT = 0
240     O = OT
        LT = CL * 57.3 * O * Q * SR
        DT = CD * Q * SR
        P = ATN((W - LT) / DT)
        T = SQR((W - LT) ^ 2 + DT ^ 2)
        X1 = (XT + YT / (TAN(P - O))) / 12
        OT = (DT * XCP * SIN(O) + T * SIN(P - O) * X1) / (-14.62 * Q * SR * XCP * COS(O))
        PRINT USING "##.######"; O * 57.3
        IF ABS(OT - O) > .0000001 THEN GOTO 240
REM *************************************************************************
        PRINT
        PRINT " trim angle ";
        PRINT USING "##.##"; OT * 57.3;
        PRINT " DEGREES"
        PRINT " target lift";
        PRINT USING "###.#"; LT;
        PRINT " LBS"
REM *************************************************************************
        END

